<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cmat.onit.MainActivity"
    android:background="@drawable/board" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        app:srcCompat="@drawable/logobkg"
        android:id="@+id/logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp"/>


    <ImageButton
        android:layout_width="120dp"
        android:layout_height="85dp"
        app:srcCompat="@drawable/post"
        android:id="@+id/post_button"
        android:background="@android:color/transparent"
        android:layout_marginBottom="36dp"
        android:layout_marginStart="31dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/school_op"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:entries="@array/school_list"
        android:prompt="@string/school_prompt"
        android:textAlignment="center"
        android:spinnerMode="dialog"
        android:foregroundTintMode="screen"
        android:background="@drawable/selectlabel"
        android:clickable="true"
        android:layout_marginBottom="92dp"
        android:layout_above="@+id/post_button"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/selectSchoolView"
        android:text="@string/schoolOp"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="30sp"
        android:background="@drawable/ssbck"
        android:paddingTop="10sp"
        android:textStyle="bold"
        android:textColor="#0d0d0d"
        android:textAlignment="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/school_op"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="36dp" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="85dp"
        app:srcCompat="@drawable/view"
        android:id="@+id/view_button"
        android:background="@android:color/transparent"
        android:layout_marginEnd="25dp"
        android:layout_alignTop="@+id/post_button"
        android:layout_alignParentEnd="true" />


</RelativeLayout>

